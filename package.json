{
  "name": "orchid",
  "version": "1.0.0",
  "description": "Orchestrate complex multi-agent AI tasks",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "orchid": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli.ts",
    "start": "bun dist/cli.js",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:jest": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:jest:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:jest:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simon-duchastel/orchid.git"
  },
  "keywords": [
    "ai",
    "orchestration",
    "opencode",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simon-duchastel/orchid/issues"
  },
  "homepage": "https://github.com/simon-duchastel/orchid#readme",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@cliffy/command": "npm:@jsr/cliffy__command@1.0.0",
    "@cliffy/prompt": "npm:@jsr/cliffy__prompt@1.0.0",
    "@cliffy/table": "npm:@jsr/cliffy__table@1.0.0",
    "@opencode-ai/sdk": "1.2.6",
    "cliffy-flat-help": "1.2.2",
    "dyson-swarm": "1.4.0",
    "open": "11.0.0",
    "simple-git": "3.31.1"
  },
  "devDependencies": {
    "@types/node": "25.3.0",
    "@vitest/coverage-v8": "4.0.18",
    "tsup": "8.5.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
